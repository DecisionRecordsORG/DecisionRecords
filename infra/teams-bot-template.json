{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "botName": {
      "type": "string",
      "defaultValue": "adr-teams-bot",
      "metadata": {
        "description": "Name of the Azure Bot resource"
      }
    },
    "botDisplayName": {
      "type": "string",
      "defaultValue": "Decision Records",
      "metadata": {
        "description": "Display name shown in Teams"
      }
    },
    "appId": {
      "type": "string",
      "metadata": {
        "description": "Azure AD Application (client) ID for the bot"
      }
    },
    "appTenantId": {
      "type": "string",
      "metadata": {
        "description": "Azure AD tenant ID (for single-tenant bot)"
      }
    },
    "messagingEndpoint": {
      "type": "string",
      "defaultValue": "https://decisionrecords.org/api/teams/webhook",
      "metadata": {
        "description": "Bot messaging endpoint URL"
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "adr-keyvault-eu",
      "metadata": {
        "description": "Key Vault name for storing bot secrets"
      }
    },
    "botAppSecret": {
      "type": "secureString",
      "metadata": {
        "description": "Azure AD client secret for the bot"
      }
    }
  },
  "variables": {
    "location": "global",
    "botSku": "F0"
  },
  "resources": [
    {
      "type": "Microsoft.BotService/botServices",
      "apiVersion": "2022-09-15",
      "name": "[parameters('botName')]",
      "location": "[variables('location')]",
      "kind": "azurebot",
      "sku": {
        "name": "[variables('botSku')]"
      },
      "properties": {
        "displayName": "[parameters('botDisplayName')]",
        "endpoint": "[parameters('messagingEndpoint')]",
        "msaAppId": "[parameters('appId')]",
        "msaAppTenantId": "[parameters('appTenantId')]",
        "msaAppType": "SingleTenant",
        "schemaTransformationVersion": "1.3",
        "isCmekEnabled": false,
        "isStreamingSupported": false,
        "publishingCredentials": null
      }
    },
    {
      "type": "Microsoft.BotService/botServices/channels",
      "apiVersion": "2022-09-15",
      "name": "[concat(parameters('botName'), '/MsTeamsChannel')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.BotService/botServices', parameters('botName'))]"
      ],
      "properties": {
        "channelName": "MsTeamsChannel",
        "properties": {
          "enableCalling": false,
          "isEnabled": true,
          "acceptedTerms": true
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(parameters('keyVaultName'), '/teams-bot-app-id')]",
      "properties": {
        "value": "[parameters('appId')]",
        "contentType": "text/plain",
        "attributes": {
          "enabled": true
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(parameters('keyVaultName'), '/teams-bot-app-secret')]",
      "properties": {
        "value": "[parameters('botAppSecret')]",
        "contentType": "text/plain",
        "attributes": {
          "enabled": true
        }
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2023-07-01",
      "name": "[concat(parameters('keyVaultName'), '/teams-bot-tenant-id')]",
      "properties": {
        "value": "[parameters('appTenantId')]",
        "contentType": "text/plain",
        "attributes": {
          "enabled": true
        }
      }
    }
  ],
  "outputs": {
    "botName": {
      "type": "string",
      "value": "[parameters('botName')]"
    },
    "botEndpoint": {
      "type": "string",
      "value": "[parameters('messagingEndpoint')]"
    },
    "teamsChannelConfigured": {
      "type": "bool",
      "value": true
    }
  }
}
