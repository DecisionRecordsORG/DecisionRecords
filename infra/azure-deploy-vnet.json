{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerName": {
      "type": "string",
      "defaultValue": "adr-app-eu",
      "metadata": {
        "description": "Name of the container instance"
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "adr-keyvault-eu",
      "metadata": {
        "description": "Name of the Key Vault for secrets"
      }
    },
    "registryLoginServer": {
      "type": "string",
      "defaultValue": "adrregistry2024eu.azurecr.io",
      "metadata": {
        "description": "Azure Container Registry login server (e.g., myregistry.azurecr.io)"
      }
    },
    "registryUsername": {
      "type": "string",
      "defaultValue": "adrregistry2024eu",
      "metadata": {
        "description": "Azure Container Registry username"
      }
    },
    "registryPassword": {
      "type": "secureString",
      "metadata": {
        "description": "Azure Container Registry password"
      }
    },
    "imageName": {
      "type": "string",
      "defaultValue": "architecture-decisions:latest",
      "metadata": {
        "description": "Container image name and tag"
      }
    },
    "databaseUrl": {
      "type": "secureString",
      "metadata": {
        "description": "Full PostgreSQL connection string (retrieved from Key Vault)"
      }
    },
    "masterUsername": {
      "type": "string",
      "defaultValue": "admin",
      "metadata": {
        "description": "Master account username"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "adr-vnet",
      "metadata": {
        "description": "Virtual network name"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "container-subnet",
      "metadata": {
        "description": "Subnet name for container instances"
      }
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Log Analytics workspace ID for container logs (optional)"
      }
    },
    "logAnalyticsWorkspaceKey": {
      "type": "secureString",
      "defaultValue": "",
      "metadata": {
        "description": "Log Analytics workspace primary key (optional)"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "containerImage": "[concat(parameters('registryLoginServer'), '/', parameters('imageName'))]",
    "subnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]",
    "keyVaultSecretsUserRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '4633458b-17de-408a-b874-0445c86b69e6')]",
    "keyVaultId": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "[parameters('containerName')]",
      "location": "[variables('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "containers": [
          {
            "name": "[parameters('containerName')]",
            "properties": {
              "image": "[variables('containerImage')]",
              "ports": [
                {
                  "port": 8000,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "DATABASE_URL",
                  "secureValue": "[parameters('databaseUrl')]"
                },
                {
                  "name": "ENVIRONMENT",
                  "value": "production"
                },
                {
                  "name": "DEBUG",
                  "value": "false"
                },
                {
                  "name": "MASTER_USERNAME",
                  "value": "[parameters('masterUsername')]"
                },
                {
                  "name": "EMAIL_VERIFICATION_REQUIRED",
                  "value": "true"
                },
                {
                  "name": "USE_HTTPS",
                  "value": "true"
                },
                {
                  "name": "AZURE_KEYVAULT_URL",
                  "value": "[concat('https://', parameters('keyVaultName'), '.vault.azure.net/')]"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 1.0,
                  "cpu": 0.5
                }
              }
            }
          }
        ],
        "imageRegistryCredentials": [
          {
            "server": "[parameters('registryLoginServer')]",
            "username": "[parameters('registryUsername')]",
            "password": "[parameters('registryPassword')]"
          }
        ],
        "ipAddress": {
          "type": "Private",
          "ports": [
            {
              "port": 8000,
              "protocol": "TCP"
            }
          ]
        },
        "subnetIds": [
          {
            "id": "[variables('subnetId')]"
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always",
        "diagnostics": "[if(empty(parameters('logAnalyticsWorkspaceId')), null(), createObject('logAnalytics', createObject('workspaceId', parameters('logAnalyticsWorkspaceId'), 'workspaceKey', parameters('logAnalyticsWorkspaceKey'))))]"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceGroup().id, parameters('containerName'), 'KeyVaultSecretsUser')]",
      "scope": "[variables('keyVaultId')]",
      "dependsOn": [
        "[resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName'))]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('keyVaultSecretsUserRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName')), '2023-05-01', 'Full').identity.principalId]",
        "principalType": "ServicePrincipal"
      }
    }
  ],
  "outputs": {
    "containerIPAddress": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName'))).ipAddress.ip]"
    },
    "managedIdentityPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerName')), '2023-05-01', 'Full').identity.principalId]"
    }
  }
}